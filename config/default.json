{
  "jwt"         : {
    "key"       : "[SECRET]",
    "public"    : "[PUBLIC]",
    "expiresIn" : 1800 // 30 * 60 sec
  },
  "tailf" : {
    "port" : 8654,
    "origin"    : "https://tailf.io",
    "log" : {
      "dirname" : "./disk"
    },
    "chunk" : {
      "size" : 50000
    },
    "metering" : {
      "*" : {
        "limit_per_file" : 102400,
        "limit_metadata" : 102400
      }
    },
    "redis" : {
      "host"          : "[HOST]",
      "port"          : 6379,
      "password"      : "[PASSWORD]",
      "db"            : 15
    },
    "mongo" : {
        "host"        : "[HOSTNAME]"
      , "port"        : 27017
      , "user"        : "[USERNAME]"
      , "password"    : "[PASSWORD]"
      , "database"    : "[DATABASE]"
    }
  }
}
