extends ../layout/minimal.pug

block append stylesheets
  style.
    html, body {
      width: 100%;
      height: 100%;
      
      margin: 0;
      padding: 0;
    }
    
    .tailf_io, .ReactXTerm, #tailf_term {
      height: 100%;
    }
    
block append scripts  
  script(src='/js/lib.js')

block content
    #tailf_term
    script.
      var uri   = window.location.origin + '/#{id}'
        , token = '#{token}'
        ;
      
      (new Tailf.default())
        .render('tailf_term', { style : { height : '100%' }, uri : uri, token : token });
